<config>
	<content>
		<resourcepath>\\mdid\f$\images\</resourcepath>
		<imageexpiration>60</imageexpiration>
		<downloads>\\mdid\e$\mdid2\downloads\</downloads>
		<templates>\\mdid\e$\mdid2\templates\</templates>
		<resourceprefix>_img_</resourceprefix>
		<remotecollections>
			<!-- update cache for all remote collections every 60 minutes -->
			<updatecache>60</updatecache>
		</remotecollections>
	</content>
<authentication>
      <method>Orciid.Core.LdapUserAuthentication</method>
      <ldap>
	<server>ldap-r.temple.edu:11389</server>

	<querypath>dc=tu,dc=temple,dc=edu</querypath>
	<email>mail</email>
	<firstname>givenName</firstname>
	<lastname>sn</lastname>
	<ssl>false</ssl>
       </ldap>
	<singlesignonconfig>\\mdid\e$\mdid2\singlesignon.xml</singlesignonconfig>
	<autocreateuser>true</autocreateuser>
</authentication>
	<database>
		<servertype>CUSTOM</servertype>
	<connection>DSN=FreeTDS_MDID2;UID=MDID_USER;PWD=diddyup</connection>
		<trace>on</trace>
		<cmdtimeout>300</cmdtimeout>
		<upgradeable>false</upgradeable>
	</database>

	<ui>
		<maxsearchresults>100000</maxsearchresults>
		<notecards>
			<pack>false</pack>
		</notecards>
		<requiressl>false</requiressl>
		<!-- uncomment the following if you want to offer the user interface in multiple languages -->
		<!--
		<language>en-US English</language>
		<language>de-DE Deutsch</language>
		-->
	</ui>
	<smtp>
		<server>smtp.temple.edu</server>
		<sender>gallery@temple.edu</sender>
	</smtp>
	<imageviewer>
		<!--
			Set to true only if you have installed on your MDID2 server an SSL certificate 
			issued by a known and valid certificate authority.
		--> 
		<securelogin>false</securelogin>
	</imageviewer>
	<search>
		<!-- valid methods: lucene, internal -->
		<method>lucene</method>
		<lucene>
			<fullindex>
				<!-- days on which full-text index should be rebuilt completely -->
				<!-- Sunday = 0, Monday = 1, etc. -->
				<days>0123456</days>
				<!-- time when index rebuild starts -->
				<start>2:00 am</start>
			</fullindex>
		</lucene>
	</search>
</config>

